{
  "version": 2,
  "buildCommand": "cd backend && npm install && cd client && npm install && npm run build",
  "outputDirectory": "backend/client/build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "backend/src/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "backend/src/server.js": {
      "runtime": "nodejs18.x"
    }
  }
}
